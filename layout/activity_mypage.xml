<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MypageActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-267dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/flyingLogo1"
                    android:layout_width="277dp"
                    android:layout_height="143dp"
                    app:srcCompat="@drawable/flying_logo" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|bottom"
                    android:layout_marginBottom="10dp"
                    android:text="flying의 다양한 서비스와 혜택을 누리세요." />

            </FrameLayout>

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginTop="50dp"
                android:text="최땡땡님의 MyPage"
                android:textSize="30sp"
                android:textStyle="bold"/>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="100dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:stretchColumns="*"
                android:background="@drawable/table_outside"
                >


                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="회원정보"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:background="@drawable/table_inside_green"
                        android:textColor="#ffffff"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="내용"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:background="@drawable/table_inside_green"
                        android:textColor="#ffffff"
                        android:textStyle="bold"/>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="이름"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:background="@drawable/table_inside"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="최땡땡"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:background="@drawable/table_inside"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="아이디"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:background="@drawable/table_inside"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="qwer123"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:background="@drawable/table_inside"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="회원등급"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:background="@drawable/table_inside"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="일반회원"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:background="@drawable/table_inside"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="회원타입"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:background="@drawable/table_inside"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="기업회원"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:background="@drawable/table_inside"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="전화번호"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:background="@drawable/table_inside"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="01012345678"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:background="@drawable/table_inside"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="이메일"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:background="@drawable/table_inside"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="qwer@gmail.com"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:background="@drawable/table_inside"/>
                </TableRow>


            </TableLayout>

            <Button
                android:id="@+id/logoutBtn"
                android:layout_width="180dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:background="@drawable/button_custom"
                android:text="로그아웃"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
